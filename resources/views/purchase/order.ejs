<section class="orders light-section">
    <div class="container mx-auto pt-12 pb-6">
        <h1 class="font-bold text-lg mb-4">All Orders</h1>
        <%if(messages.success){ %>
            <div id="success-alert" role="alert"
                class="flex items-center bg-green-500 text-white text-sm font-bold px-4 py-3">
                <p>
                    <%= messages.success %>
                </p>
            </div>
            <% } %>
                <table class="w-full table-auto bg-white">
                    <thead>
                        <tr>
                            <th class="px-4 py-2 text-left">Orders</th>
                            <th class="px-4 py-2 text-left">Address</th>
                            <th class="px-4 py-2 text-left">Contact</th>
                            <th class="px-4 py-2 text-left">Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(orders.length){ %>
                            <% orders.forEach((order)=>{ %>
                                <tr>
                                    <td class="px-4 py-2 text-left border"><a class="link" href="/">
                                            <%=order._id %>
                                        </a></td>
                                    <td class="px-4 py-2 text-left border">
                                        <%= order.address %>
                                    </td>
                                    <td class="px-4 py-2 text-left border">
                                        <%= order.phone %>
                                    </td>
                                    <td class="px-4 py-2 text-left border">
                                        <%= moment(order.createdAt).format('hh:mm A')%>
                                    </td>
                                </tr>
                                <%}) %>

                                    <% } else { %>

                                        <tr>
                                            <td class="p-4"><span>NO ORDERS FOUND</span></td>
                                        </tr>
                                        <%} %>
                    </tbody>
                </table>
    </div>
</section>